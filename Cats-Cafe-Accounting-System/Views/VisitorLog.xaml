<UserControl x:Class="Cats_Cafe_Accounting_System.Views.VisitorLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cats_Cafe_Accounting_System.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400"
             d:DesignWidth="622"
             Background="Transparent">
    <Grid>

        <Border Background="#272B2F" CornerRadius="20" />
        <Grid>

            <Border Background="#DBDBDB" CornerRadius="5, 0, 20, 0" />
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="Журнал учета посещений"
                           Style="{StaticResource Pages_Headers}"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <DataGrid ItemsSource="{Binding VisitorsLogEntries}" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Посетитель" Binding="{Binding Visitor.FirstName}"/>
                                <DataGridTextColumn Header="Билет" Binding="{Binding Ticket.Price}" />
                                <DataGridTextColumn Header="Количество билетов" Binding="{Binding TicketsCount}" />
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date}"/>
                                <DataGridTextColumn Header="Время начала" Binding="{Binding TimeStart}" />
                                <DataGridTextColumn Header="Время конца" Binding="{Binding TimeEnd}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>



                </Grid>

            </Grid>


        </Grid>

    </Grid>
</UserControl>
